<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediCAL" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdeClaro</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/verdeClaro</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorAccent">@color/verdeTextos</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonOverrideStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_redondo_blanco</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/radio_button_tint_selector</item>
    </style>

</resources>