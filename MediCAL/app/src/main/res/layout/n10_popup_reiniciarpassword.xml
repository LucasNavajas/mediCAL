<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inter_bold"
        android:text="REINICIAR CONTRASEÃ‘A"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textAppearance="@style/CustomButtonText"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_regular"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/textEdit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:hint="Ingrese su cuenta"
        android:textColorHint="#888888"
        android:fontFamily="@font/inter_regular"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@id/textEdit_email"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:layout_marginStart="20dp"
            android:textColor="@color/verdeTextos"
            android:textSize="16sp"
            android:clickable="true" />

        <TextView
            android:id="@+id/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="ACEPTAR"
            android:textColor="@color/verdeTextos"
            android:textSize="16sp"
            android:layout_marginEnd="50dp"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

</LinearLayout>