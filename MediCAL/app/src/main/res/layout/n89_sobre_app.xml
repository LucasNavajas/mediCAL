<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/cabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/boton_volver"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/flecha_atras"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/texto_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/boton_volver"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:text="Acerca de MediCAL"
            android:fontFamily="@font/inter_medium"
            android:textSize="25sp"
            android:textColor="#FFF" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/cabecera"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagen_logo"
            android:layout_marginTop="60dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_app"
            />

        <ImageView
            android:id="@+id/imagen_logo2"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/nombre_logo"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/text_mujer"
            android:background="#808080" />

        <TextView
            android:id="@+id/text_term_cond"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textSize="21sp"
            android:text="Términos y Condiciones"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/text_mujer"
            android:background="#808080" />

        <TextView
            android:id="@+id/text_politicas"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textSize="21sp"
            android:text="Políticas de Privacidad"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/text_mujer"
            android:background="#808080" />

        <TextView
            android:id="@+id/text_manual"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textSize="21sp"
            android:text="Manual de Usuario"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/text_mujer"
            android:background="#808080" />

        <TextView
            android:id="@+id/text_actualizaciones"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_regular"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textSize="21sp"
            android:text="Actualizaciones"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/text_mujer"
            android:background="#808080" />

    </LinearLayout>

</RelativeLayout>