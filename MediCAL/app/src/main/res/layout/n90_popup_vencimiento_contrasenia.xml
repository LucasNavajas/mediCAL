<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_verde"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/boton_cerrar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cerrar_cruz_delgada"
        app:tint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/inter_medium"
        android:inputType="textMultiLine"
        android:text="Ha pasado 1 año, debe modificar su contraseña por motivos de seguridad"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>
