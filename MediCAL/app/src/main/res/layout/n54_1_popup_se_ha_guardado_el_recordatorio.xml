<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_blanco"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imagen_remedio"
        android:layout_width="80dp"
        android:layout_height="69dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/remedio" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/inter_medium"
        android:text="Ha agregado con éxito Nombredemedicamento"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="center" />

        <Button
            android:id="@+id/button_anadir_mas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/boton_redondo_verde"
            android:focusable="false"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Añadir otra medicación    +"
            android:textAllCaps="false"
            android:textAppearance="@style/CustomButtonText"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <Button
            android:layout_below="@+id/button_anadir_mas"
            android:id="@+id/button_volver_inicio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton_redondo_blanco"
            android:focusable="false"
            android:fontFamily="@font/inter_bold"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Volver al inicio"
            android:textAllCaps="false"
            android:textAppearance="@style/CustomButtonText"
            android:textColor="@color/verdeTextos"
            android:textSize="20sp"
            app:backgroundTint="@color/white"/>




</LinearLayout>
