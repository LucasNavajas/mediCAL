<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_verde"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/user_tachado"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_tachado"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:layout_marginStart="60dp"
            />
        <ImageView
            android:id="@+id/boton_cerrar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cerrar_cruz_delgada"
            app:tint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/inter_medium"
        android:text=" ya no es mÃ¡s tu contacto."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        />



</LinearLayout>
