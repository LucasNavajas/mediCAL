<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/cabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/boton_volver"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/flecha_atras"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/texto_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/boton_volver"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:text="Inventario de Remedios"
            android:fontFamily="@font/inter_medium"
            android:textSize="25sp"
            android:textColor="#FFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/cabecera"
        >

        <RelativeLayout
            android:id="@+id/inventarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:layout_centerHorizontal="true" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/contenido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <!-- Menú Desplegable -->
                    <RelativeLayout
                        android:id="@+id/menu_desplegable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp">

                        <TextView
                            android:id="@+id/texto_menu_desplegable"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginEnd="10dp"
                            android:text="Todos los Medicamentos"
                            android:textSize="24dp"
                            android:textColor="@android:color/black"
                            />

                        <ImageView
                            android:id="@+id/desplegable"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="25dp"
                            android:layout_toEndOf="@id/texto_menu_desplegable"
                            android:layout_alignTop="@id/texto_menu_desplegable"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/boton_desplegable" />

                    </RelativeLayout>

                    <!-- Lista de Inventarios -->
                    <RelativeLayout
                        android:id="@+id/rectangle_inventarios"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_rounded_blanco">

                        <!-- Inventario 1 -->
                        <RelativeLayout
                            android:id="@+id/rectangle_inventario1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            >

                            <ImageView
                                android:id="@+id/imagen_inventario1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/remedio" />

                            <!-- nombreMedicamento sería reemplazado por el nombre
                                del medicamento mostrado -->
                            <TextView
                                android:id="@+id/texto_titulo_inventario1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@id/imagen_inventario1"
                                android:text="NombreMedicamento 1"
                                android:textSize="23dp"
                                android:textStyle="bold" />

                            <!-- CantidadReal sería reemplazado por la cantidad real
                                que se posea del remedio mostrado -->
                            <TextView
                                android:id="@+id/texto_cant_real_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_titulo_inventario1"
                                android:layout_alignLeft="@+id/texto_titulo_inventario1"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:text="CantidadReal"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                            <!-- CantidadAviso sería reemplazado por la cantidad puesta
                                 como aviso en el remedio mostrado -->
                            <TextView
                                android:id="@+id/texto2_cant_aviso_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_cant_real_1"
                                android:layout_alignLeft="@+id/texto_titulo_inventario1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="CantidadAviso"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                        </RelativeLayout>

                        <!-- Inventario 2 -->
                        <RelativeLayout
                            android:id="@+id/rectangle_inventario2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rectangle_inventario1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <ImageView
                                android:id="@+id/imagen_inventario2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/remedio" />

                            <!-- nombreMedicamento sería reemplazado por el nombre
                            del medicamento mostrado -->
                            <TextView
                                android:id="@+id/texto_titulo_inventario2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@id/imagen_inventario2"
                                android:text="NombreMedicamento 2"
                                android:textSize="23dp"
                                android:textStyle="bold" />

                            <!-- CantidadReal sería reemplazado por la cantidad real
                            que se posea del remedio mostrado -->
                            <TextView
                                android:id="@+id/texto_cant_real_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_titulo_inventario2"
                                android:layout_alignLeft="@+id/texto_titulo_inventario2"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:text="CantidadReal"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                            <!-- CantidadAviso sería reemplazado por la cantidad puesta
                            como aviso en el remedio mostrado -->
                            <TextView
                                android:id="@+id/texto2_cant_aviso_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_cant_real_2"
                                android:layout_alignLeft="@+id/texto_titulo_inventario2"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="CantidadAviso"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                        </RelativeLayout>

                        <!-- Inventario 3 -->
                        <RelativeLayout
                            android:id="@+id/rectangle_inventario3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rectangle_inventario2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <ImageView
                                android:id="@+id/imagen_inventario3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/remedio" />

                            <!-- nombreMedicamento sería reemplazado por el nombre
                            del medicamento mostrado -->
                            <TextView
                                android:id="@+id/texto_titulo_inventario3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@id/imagen_inventario3"
                                android:text="NombreMedicamento 3"
                                android:textSize="23dp"
                                android:textStyle="bold" />

                            <!-- CantidadReal sería reemplazado por la cantidad real
                            que se posea del remedio mostrado -->
                            <TextView
                                android:id="@+id/texto_cant_real_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_titulo_inventario3"
                                android:layout_alignLeft="@+id/texto_titulo_inventario3"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:text="CantidadReal"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                            <!-- CantidadAviso sería reemplazado por la cantidad puesta
                            como aviso en el remedio mostrado -->
                            <TextView
                                android:id="@+id/texto2_cant_aviso_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/texto_cant_real_3"
                                android:layout_alignLeft="@+id/texto_titulo_inventario3"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="CantidadAviso"
                                android:textColor="@color/black"
                                android:textSize="21dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>