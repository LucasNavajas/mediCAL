<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/boton_cerrar"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cerrar_cruz_delgada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_calendarioagregado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boton_cerrar"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_horizontal"
            android:text="Se ha agregado el calendario, "
            android:textColor="@color/verdeClaro"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/gif_calendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_calendarioagregado"
            android:src="@drawable/gif_calendario" />
    </LinearLayout>

    <TextView
        android:id="@+id/texto_completo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ahora, podemos agregar sus medicamentos y crear sus recordatorios personalizados."
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_agregarMedicamento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_completo"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boton_redondo_verde"
        android:focusable="false"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Agregar medicamento"
        android:textAllCaps="false"
        android:textAppearance="@style/CustomButtonText"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
