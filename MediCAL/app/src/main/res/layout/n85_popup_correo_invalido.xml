<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Por favor, intente nuevamente, ya que el email del destinatario que se proporcionó no es válida."
        android:textColor="@color/rojoError"
        android:textSize="27sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="VOLVER ATRÁS"
            android:textColor="@color/verdeTextos"
            android:textSize="22sp"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:gravity="end"/>

    </LinearLayout>

</LinearLayout>