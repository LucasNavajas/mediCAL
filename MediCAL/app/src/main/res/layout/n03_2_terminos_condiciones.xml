<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/boton_cerrar"
        android:layout_width="25dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/cerrar_cruz_delgada"
        app:tint="@color/white" />
    <TextView
        android:id="@+id/text_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Términos y condiciones"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:layout_toEndOf="@id/boton_cerrar"
        android:layout_alignBottom="@id/boton_cerrar"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inter_medium" />

    <RelativeLayout
        android:id="@+id/rectangle_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/norounded_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/botones_idiomas">

            <Button
                android:id="@+id/buttonFlagArg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bandera_arg"
                android:text="@string/espa_ol"
                android:fontFamily="@font/inter_medium"
                android:textAppearance="@style/CustomButtonText"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/boton_redondo_verde"
                android:textAllCaps="false"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/buttonFlagUsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bandera_usa"
                android:text="@string/english"
                android:fontFamily="@font/inter_medium"
                android:textAppearance="@style/CustomButtonText"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/boton_redondo_verde"
                android:textAllCaps="false"
                android:layout_marginRight="16dp" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/botones_idiomas"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloTYC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:padding="16dp"
                    android:text="SERVICIO MEDICAL PARA USUARIOS - Términos y Condiciones (“Términos y Condiciones de uso”) actualizados Mayo, 2023"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/textViewTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:padding="16dp" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>

