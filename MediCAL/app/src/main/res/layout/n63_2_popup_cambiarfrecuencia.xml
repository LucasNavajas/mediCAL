<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <!--titulo-->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Cambiar frecuencia:"
        android:textColor="@color/black"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/text_x_horas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Cada X horas"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_x_horas"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/text_x_dias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_x_horas"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Cada X días"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_x_dias"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/text_x_semanas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_x_dias"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:text="Cada X semanas"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_x_semanas"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/text_x_meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_x_semanas"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Cada X meses"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_x_meses"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/text_ciclo_recurrente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_x_meses"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Ciclo recurrente"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_ciclo_recurrente"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/text_segun_sea_necesario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_ciclo_recurrente"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="Según sea necesario"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/inter_regular"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_segun_sea_necesario"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#808080" />

    <!--botones aceptar y cancelar-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="CANCELAR"
            android:textColor="@color/verdeTextos"
            android:textSize="22sp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="ACEPTAR"
            android:textColor="@color/verdeTextos"
            android:textSize="22sp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:gravity="end"/>

    </LinearLayout>

    <View
        android:id="@+id/dim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>
</LinearLayout>


