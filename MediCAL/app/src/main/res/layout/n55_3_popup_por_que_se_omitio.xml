<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- título -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="¿Puede indicar por qué omitió esta dosis?"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <!-- RadioGroup -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RadioButton
            android:id="@+id/radio_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tengo el medicamento cerca"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <RadioButton
            android:id="@+id/radio_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Me olvidé / ocupado / dormido"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <RadioButton
            android:id="@+id/radio_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se quedó sin el medicamento"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <RadioButton
            android:id="@+id/radio_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No necesito tomar esta dosis"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <RadioButton
            android:id="@+id/radio_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efectos secundarios / otros problemas de salud"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            />

        <RadioButton
            android:id="@+id/radio_option6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preocupado por el costo"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

        <RadioButton
            android:id="@+id/radio_option7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otro"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:textSize="21sp"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            />

    </RadioGroup>

</LinearLayout>
